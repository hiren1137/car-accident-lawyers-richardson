---
import type { Lawyer } from "../utils/seo";
import {
    generateStars,
    formatPhoneForTel,
    formatRating,
    formatReviewCount,
} from "../utils/seo";

export interface Props {
    lawyer: Lawyer;
    featured?: boolean;
}

const { lawyer, featured = false } = Astro.props;
const telLink = formatPhoneForTel(lawyer.phone);
const rating = formatRating(lawyer.rating);
const reviews = formatReviewCount(lawyer.reviewsCount);
---

<article class={`card ${featured ? "ring-2 ring-gray-900" : ""}`}>
    <div class="p-6">
        {
            featured && (
                <span class="inline-block px-3 py-1 bg-gray-900 text-white text-xs font-semibold rounded-full mb-3">
                    Featured
                </span>
            )
        }

        <h3 class="text-lg font-bold text-gray-900 mb-2 line-clamp-2">
            <a
                href={`/lawyers/${lawyer.slug}/`}
                class="hover:text-gray-600 transition-colors"
            >
                {lawyer.name}
            </a>
        </h3>

        <div class="flex items-center gap-2 mb-3">
            <span class="stars text-lg">{generateStars(lawyer.rating)}</span>
            <span class="text-sm text-gray-600">
                {rating} ({reviews} reviews)
            </span>
        </div>

        {
            lawyer.categories && (
                <p class="text-sm text-gray-700 font-medium mb-2">
                    {lawyer.categories}
                </p>
            )
        }

        <p class="text-sm text-gray-600 mb-4 line-clamp-2">
            <svg
                class="w-4 h-4 inline-block mr-1 text-gray-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            {lawyer.address}
        </p>

        <div class="flex flex-col sm:flex-row gap-2">
            <a
                href={`/lawyers/${lawyer.slug}/`}
                class="btn-secondary text-sm flex-1 text-center"
            >
                View Profile
            </a>

            {
                telLink && (
                    <a
                        href={`tel:${telLink}`}
                        class="btn-primary text-sm flex-1 text-center"
                    >
                        <svg
                            class="w-4 h-4 mr-1"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            />
                        </svg>
                        Call Now
                    </a>
                )
            }
        </div>
    </div>
</article>
